package com.dnk.tic_tac_toe;

import com.dnk.GUI.GameGUIBoard;
import com.dnk.Logic.Board;
import com.dnk.Logic.Player;

public class Tic_Tac_Toe {

    public static void main(String[] args) {
                                                                                // Instances
        Board bd = new Board();                                                     // Board
        Player player1 = new Player(true);                                          // player1
        Player player2 = new Player(false);                                         // player2
        GameGUIBoard gui = new GameGUIBoard(bd, player1, player2);                      // GUI
            gui.setVisible(true);                                                       // make visible
            gui.setLocationRelativeTo(null);                                            // place center
        
        player1.setTurn(true);                                                      // Set player1 turn as first
        }
        
    }
    
    

